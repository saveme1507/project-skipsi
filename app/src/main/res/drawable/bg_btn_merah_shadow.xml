<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:right="2dp">
<!--                android:left="2dp">-->
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:right="1dp">
                <shape>
                    <gradient
                        android:type="linear"
                        android:startColor="#FF3636"
                        android:endColor="#BB0E0E"
                        android:angle="0" />
                    <stroke
                        android:width="0dp"
                        android:color="#BABABA" />
                    <corners android:radius="20dp" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>