<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".activity.Registrasi">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_content_login"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_margin="25dp"/>
        <EditText
            android:id="@+id/daftar_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:hint="username"
            android:paddingLeft="15dp"
            android:drawablePadding="22dp"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/daftar_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:drawablePadding="22dp"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/daftar_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:hint="password"
            android:paddingLeft="15dp"
            android:drawablePadding="30dp"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:password="true"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/daftar_password_conf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:hint="konfirmasi password"
            android:paddingLeft="15dp"
            android:drawablePadding="30dp"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:password="true"
            android:singleLine="true"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/daftar_spinnerCust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            android:background="#a2a23b"
            android:hint="Pilih Perusahaan"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/daftar_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_merah_shadow"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Daftar"
            android:textColor="#FFF"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/daftar_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_putih_shadow"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Kembali Login"
            android:textColor="#000"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>