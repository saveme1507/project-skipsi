<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.PergantianPart">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="7dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/appBar_pergantianPart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_app_bar_red_gradient"
            android:paddingLeft="30dp"
            android:paddingRight="10dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Pergantian Sparepart"
                    android:textColor="#FBFBFB"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
                <TextView
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:background="#FBFBFB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_spinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
                <EditText
                    android:id="@+id/et_tanggal_pergantianPart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="14dp"
                    android:paddingStart="8dp"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginTop="3dp"
                    android:focusable="false"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PT Pelanggan"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_spinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
                <Spinner
                    android:id="@+id/sp_pelanggan_pergantianPart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_edittext"
                    android:spinnerMode="dropdown"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SN Mesin"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_spinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
                <Spinner
                    android:id="@+id/sp_sn_pergantianPart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_edittext"
                    android:spinnerMode="dropdown"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Part Number"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/et_partnumber_pergantianPart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:paddingStart="8dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Sparepart"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/et_namasparepart_pergantianPart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:paddingStart="8dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textSize="12dp"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/et_keterangan_pergantianPart"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_edittext"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:focusable="auto"
                android:gravity="clip_vertical"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar"
                android:textSize="12dp"
                android:layout_marginTop="25dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/iv_gambar_pergantianPart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/bg_edittext"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_foto_pergantianPart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/iv_galeri_pergantianPart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_toEndOf="@id/iv_foto_pergantianPart"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/bt_simpan_pergantianPart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_merah_shadow"
                android:text="simpan"
                android:textSize="14dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>