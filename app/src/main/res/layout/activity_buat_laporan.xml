<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activity.BuatLaporan">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="7dp"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/appBar_buatLaporan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_app_bar_red_gradient"
            android:paddingLeft="30dp"
            android:paddingRight="10dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tx_judul_open_sparepart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Buat Laporan"
                    android:textColor="#FBFBFB"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
                <TextView
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:background="#FBFBFB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp">
            <TextView
                android:id="@+id/tx_mm_id_buatLap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line"
                android:textSize="12dp"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/ns_line_buatLap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomer Seri Mesin"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <org.angmarch.views.NiceSpinner
                android:id="@+id/ns_sn_buatLap"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="12dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/et_deskripsi_buatLap"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/bg_edittext"
                android:overScrollMode="always"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:gravity="clip_vertical"
                android:textSize="14dp"
                android:textColor="@color/colorTextList"/>
            <Button
                android:id="@+id/bt_kirim_buatLap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_merah_shadow"
                android:text="kirim"
                android:textSize="14dp"
                android:textColor="#FFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>