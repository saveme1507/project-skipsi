<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".activity.Pengaturan">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="7dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/appBar_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_app_bar_red_gradient"
            android:paddingLeft="30dp"
            android:paddingRight="10dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_judul_open_sparepart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Pengaturan"
                    android:textColor="#FBFBFB"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:background="#FBFBFB"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/tx_editProfil_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textSize="16dp"
            android:textColor="@color/colorTextList"
            android:drawableLeft="@drawable/icon_pengaturan_profil"
            android:layout_marginLeft="30dp"
            android:drawablePadding="15dp"/>
        <TextView
            android:id="@+id/tx_gantiUser_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Username"
            android:textSize="16dp"
            android:textColor="@color/colorTextList"
            android:drawableLeft="@drawable/icon_pengaturan_user"
            android:drawablePadding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tx_gantiPass_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:textSize="16dp"
            android:textColor="@color/colorTextList"
            android:drawableLeft="@drawable/icon_pengaturan_pass"
            android:drawablePadding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tx_gantiHp_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Nomer Handphone"
            android:textSize="16dp"
            android:textColor="@color/colorTextList"
            android:drawableLeft="@drawable/icon_pengaturan_hp"
            android:drawablePadding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tx_hapusAkun_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus Akun"
            android:textSize="16dp"
            android:textColor="@color/colorTextList"
            android:drawableLeft="@drawable/icon_pengaturan_hapus"
            android:drawablePadding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btn_logout_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_merah_shadow"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>