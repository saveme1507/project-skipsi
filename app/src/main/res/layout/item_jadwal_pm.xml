<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:background="#FFFF"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_jadwalpm"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tx_id_jadwalpm"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginRight="5dp"
            android:text="Next PM"
            android:textSize="8dp"
            android:textColor="@color/colorTextList"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tx_lastpm_jadwalpm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="20 Jan 2020"
            android:textColor="@color/colorTextList"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tx_tipe_jadwalpm"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="9040"
            android:textColor="@color/colorTextList"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tx_sn_jadwalpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FR12090099"
            android:textColor="@color/colorTextList"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBatasList"/>
</LinearLayout>